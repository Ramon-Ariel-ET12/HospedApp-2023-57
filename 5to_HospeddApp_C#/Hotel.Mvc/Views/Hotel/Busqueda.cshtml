@using HotelApp.Core;
@model IEnumerable<Hotel>;
@{
    ViewData["Title"] = "Hoteles";
}

<div class="text-center">
    <h1>Buscar</h1>
</div>
<div class="text-center">
    <form asp-controller="Hotel" asp-action="Buscar" method="get">
        <input type="text" name="busqueda" />
        <input type="submit" value="Buscar" />
    </form>
</div>

<div class="text-center">
    @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
    {
        <p>No se encontraron Hoteles.</p>
    }
    else
    {
        <h3>Hoteles</h3>
        <br>

        <br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">IdHotel</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Domicilio</th>
                    <th scope="col">Email</th>
                    <th scope="col">Estrella</th>
                    <th scope="col" colspan="3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <th>@hotel.IdHotel</th>
                        <th>@hotel.Nombre</th>
                        <th>@hotel.Domicilio</th>
                        <th>@hotel.Email</th>
                        <th>@hotel.Estrella</th>
                        <td><a asp-action="Detalle" asp-route-Id="@hotel.IdHotel">Detalle <i class="bi bi-eyeglasses" style="color: black;"></i></a></td>
                        <td><a asp-action="AgregarCuarto" asp-route-Id="@hotel.IdHotel">Agregar cuarto <i class="bi bi-pencil-fill" style="color: black;"></i></a></td>
                        <td><a asp-action="Modificar" asp-route-Id="@hotel.IdHotel">Modificar <i class="bi bi-pencil-fill" style="color: black;"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
