<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospedApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HospedApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarHotelMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Hotel
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarHotelMenu">
                                <li><a class="dropdown-item" asp-controller="Hotel" asp-action="Listado"><i class="bi bi-list-nested"></i> Listado</a></li>                                
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarCuartoMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Cuarto
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCuartoMenu">
                                <li><a class="dropdown-item" asp-controller="Cuarto" asp-action="Listado"><i class="bi bi-plus-circle"></i> Listado</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarCamaMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Cama
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCamaMenu">
                                <li><a class="dropdown-item" asp-controller="Cama" asp-action="Listado"><i class="bi bi-list-nested"></i> Listado</a></li>                                
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarCamaMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Reserva
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCamaMenu">
                                <li><a class="dropdown-item" asp-controller="Reserva" asp-action="Listado"><i class="bi bi-list-nested"></i> Listado</a></li>                                
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarCamaMenu" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Usuario
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCamaMenu">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Listado"><i class="bi bi-list-nested"></i> Listado</a></li>                                
                            </ul>
                        </li>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


