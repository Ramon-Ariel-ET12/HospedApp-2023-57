classDiagram
    Cuarto_Cama o-- Cama
    Cuarto_Cama o-- Cuarto
    Reserva o-- Cliente
    Reserva o-- Hotel
    Reserva o-- Cuarto
    ReservaCancelada o-- Reserva
    ReservaCancelada o-- Hotel
    ReservaCancelada o-- Cliente
    ReservaCancelada o-- Cuarto  
    class Cama{
        Tipo_de_cama: int PK
        Nombre: string
        Pueden_dormir: int
    }
    class Cliente{
        IdCliente:  int PK
        Nombre: string
        Apellido: string 
        Email: string 
        Contraseña: string 
    }
    class  Cuarto_Cama{
        IdCuarto: List~Cuarto~ PK FK
        Tipo_de_cama: List~Cama~ PK FK
        Cantidad_de_cama: int 
    }
    class Cuarto{ 
        IdCuarto: int PK
        Cochera: bool 
        Noche: double 
        Descripcion: string 
    }
    class Hotel{
        IdHotel: int PK
        Nombre: string 
        Domicilio: string 
        Email: string 
        Contraseña: string 
        Estrella: int 
    }
    class Reserva{
        IdReserva: int PK
        IdHotel: List~Hotel~ FK
        Inicio: DateOnly 
        Fin: DateOnly
        IdCliente: List~Cliente~ FK
        IdCuarto: List~Cuarto~ FK
        Calificacion_del_cliente: int
        Calificacion_del_hotel: int
        Comentario_del_cliente: int
    }
    class ReservaCancelada{
        IdReserva: int PK FK
        IdHotel: List~Hotel~ FK
        Inicio: DateOnly
        Fin: DateOnly
        IdCliente: List~Cliente~ FK
        IdCuarto: List~Cuarto~ FK
    }