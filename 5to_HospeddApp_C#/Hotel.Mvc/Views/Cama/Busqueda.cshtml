@using HotelApp.Core;
@model IEnumerable<Cama>;
@{
        ViewData["Title"] = "Camas";
}

<div class="text-center">
    <h1>Buscar</h1>
</div>
<div class="text-center">

    <form asp-controller="Cama" asp-action="Buscar" method="get">
        <input type="text" name="busqueda" />
        <input type="submit" value="Buscar" />
    </form>
</div>

<div class="text-center">
@if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
    {
        <p>No se encontraron Camas.</p>
    }
    else
    {
        <br><br>
        <table class="table table-striped">
                <thead>
                <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Pueden dormir</th>
                </tr>
                </thead>
                <tbody class="">
                @foreach (var Cama in Model)
                {
                        <tr>
                        <th scope="row">@Cama.Nombre</th>
                        <td>@Cama.Pueden_dormir</td>
                        </tr>
                }
                </tbody>
        </table>
}
</div>