@using HotelApp.Core;
@model IEnumerable<Cuarto>;
@{
    ViewData["Title"] = "Cuartos";
}

<div class="text-center">
    <h1>Buscar</h1>
</div>
<div class="text-center">
    <form asp-controller="Cuarto" asp-action="Buscar" method="get">
        <input type="text" name="busqueda" />
        <input type="submit" value="Buscar" />
    </form>
</div>

<div class="text-center">
@if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
{
    <p>No se encontraron Cuartos.</p>
}
else
{
    <h3>Cuartos</h3>
    <br><br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Numero de cuarto</th>
                <th scope="col">Cochera</th>
                <th scope="col">Noche</th>
                <th scope="col">Descripcion</th>
                <th scope="col" colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cuarto in Model)
            {
                <tr>
                    <th>@cuarto.IdCuarto</th>
                    <th>@cuarto.Cochera</th>
                    <th>@cuarto.Noche</th>
                    <th>@cuarto.Descripcion</th>
                    <td><a asp-action="Detalle" asp-route-Id="@cuarto.IdCuarto">Detalle <i class="bi bi-eyeglasses" style="color: black;"></i></a></td>
                    <td><a asp-action="Modificar" asp-route-Id="@cuarto.IdCuarto">Modificar <i class="bi bi-pencil-fill" style="color: black;"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
</div>
