@using HotelApp.Core;
@model List<Hotel_Cuarto>;
@{
    ViewData["Title"] = "Cuarto de Hoteles";
}

<div class="text-center">
</div>
<div class="text-center">
    @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
    {
        <p>No se encontraron cuartos de los hoteles.</p>
    }
    else
    {
        <h1>Cuartos del hotel</h1>
        <hr>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">IdCuarto</th>
                    <th scope="col">Cochera</th>
                    <th scope="col">Noche</th>
                    <th scope="col">Numero de cuarto</th>
                    <th scope="col">Descripcion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <th>@hotel.Cuarto.IdCuarto</th>
                        <th>@hotel.Cuarto.Cochera</th>
                        <th>@hotel.Cuarto.Noche</th>
                        <th>@hotel.Numero</th>
                        <th>@hotel.Cuarto.Descripcion</th>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
