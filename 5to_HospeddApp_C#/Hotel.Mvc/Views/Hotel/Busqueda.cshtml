@using HotelApp.Core;
@model IEnumerable<Hotel>;
@{
    ViewData["Title"] = "Hoteles";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Buscar Hoteles</h1>
    </div>

    <div class="text-center mt-4">
        <form asp-controller="Hotel" asp-action="Buscar" method="get" class="form-inline justify-content-center">
            <input type="text" name="busqueda" class="form-control mr-2" placeholder="Buscar hoteles..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <div class="content-box mt-4">
        @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
        {
            <p class="text-muted">No se encontraron hoteles.</p>
        }
        else
        {
            <h3 class="mt-4">Lista de Hoteles</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">IdHotel</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Domicilio</th>
                            <th scope="col">Email</th>
                            <th scope="col">Estrella</th>
                            <th scope="col" colspan="3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hotel in Model)
                        {
                            <tr>
                                <th>@hotel.IdHotel</th>
                                <th>@hotel.Nombre</th>
                                <th>@hotel.Domicilio</th>
                                <th>@hotel.Email</th>
                                <th>@hotel.Estrella</th>
                                <td>
                                    <a asp-action="Detalle" asp-route-Id="@hotel.IdHotel" class="btn btn-sm btn-outline-secondary">
                                        Detalle <i class="bi bi-eyeglasses"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="AgregarCuarto" asp-route-Id="@hotel.IdHotel" class="btn btn-sm btn-outline-secondary">
                                        Agregar cuarto <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Modificar" asp-route-Id="@hotel.IdHotel" class="btn btn-sm btn-outline-secondary">
                                        Modificar <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>