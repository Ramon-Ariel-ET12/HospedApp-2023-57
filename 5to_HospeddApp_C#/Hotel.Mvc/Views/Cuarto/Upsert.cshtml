@using HotelApp.Core;
@model Cuarto_Cama;
@{
    var texto = Model is null ? "Alta Cuarto" : "Modificar Cuarto";
    ViewData["Title"] = texto;
}

<form asp-controller="Cuarto" asp-action="Upsert" method="post">
    <div asp-validation-summary="All"></div>
    @if (Model != null)
    {
        <div><input type="hidden" asp-for="@Model.IdCuarto" /></div>
    }
    <div class="mb-3">
        <label asp-for="Cuarto.Cochera" class="form-label">Cochera</label>
        <input asp-for="Cuarto.Cochera" class="form-check-input" type="checkbox" />
    </div>
    <div class="mb-3">
        <label asp-for="Cuarto.Noche" class="form-label">Noche</label>
        <input asp-for="Cuarto.Noche" class="form-control" type="number" required/>
    </div>
    <div class="mb-3">
        <label asp-for="Cuarto.Descripcion" class="form-label">Descripci√≥n</label>
        <input asp-for="Cuarto.Descripcion" class="form-control" required/>
    </div>
    <div class="mb-3">
        <label asp-for="Cama.IdCama" class="form-label">Cama</label>
        <input asp-for="Cama.IdCama" class="form-control" type="number" required />
    </div>
    <div class="mb-3">
        <label asp-for="Cantidad_de_cama" class="form-label">Cantidad de camas</label>
        <input asp-for="Cantidad_de_cama" class="form-control" type="number" required />
    </div>
    <div class="mb-3">
        @if (Model is null)
        {
            <button type="submit" class="btn btn-primary">@texto</button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">@texto</button>
        }
    </div>
</form>