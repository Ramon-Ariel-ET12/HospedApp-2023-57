@using HotelApp.Core;
@model IEnumerable<Reserva>;
@{
    ViewData["Title"] = "Reservas";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Buscar Reservas</h1>
    </div>

    <div class="text-center mt-4">
        <form asp-controller="Reserva" asp-action="Buscar" method="get" class="form-inline justify-content-center">
            <input type="text" name="busqueda" class="form-control mr-2" placeholder="Buscar reservas..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <div class="content-box mt-4">
        @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
        {
            <p class="text-muted">No se encontraron reservas.</p>
        }
        else
        {
            <h3 class="mt-4">Lista de Reservas</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Número de reserva</th>
                            <th scope="col">Hotel</th>
                            <th scope="col">Inicio</th>
                            <th scope="col">Fin</th>
                            <th scope="col">Dni</th>
                            <th scope="col">Número de Cuarto</th>
                            <th scope="col" colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model)
                        {
                            <tr>
                                <th>@reserva.IdReserva</th>
                                <td>@reserva.Hotel?.Nombre</td>
                                <td>@reserva.Inicio</td>
                                <td>@reserva.Fin</td>
                                <td>@reserva.Cliente?.Dni</td>
                                <td>@reserva.HotelCuarto?.Numero</td>
                                <td>
                                    <a asp-action="Detalle" asp-route-Id="@reserva.IdReserva" class="btn btn-sm btn-outline-secondary">
                                        Detalle <i class="bi bi-eyeglasses"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Modificar" asp-route-Id="@reserva.IdReserva" class="btn btn-sm btn-outline-secondary">
                                        Modificar <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>