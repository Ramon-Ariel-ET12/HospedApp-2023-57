@using HotelApp.Core;
@model IEnumerable<Cuarto_Cama>;
@{
    ViewData["Title"] = "Cuartos";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Buscar Cuartos</h1>
    </div>

    <div class="text-center mt-4">
        <form asp-controller="Cuarto" asp-action="Buscar" method="get" class="form-inline justify-content-center">
            <input type="text" name="busqueda" class="form-control mr-2" placeholder="Buscar cuartos..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <div class="content-box mt-4">
        @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Busqueda"))
        {
            <p class="text-muted">No se encontraron cuartos.</p>
        }
        else
        {
            <h3 class="mt-4">Lista de Cuartos</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">IdCuarto</th>
                            <th scope="col">Cochera</th>
                            <th scope="col">Noche</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cuarto in Model)
                        {
                            <tr>
                                <th>@cuarto.Cuarto.IdCuarto</th>
                                <th>@cuarto.Cuarto.Cochera</th>
                                <th>@cuarto.Cuarto.Noche</th>
                                <th>@cuarto.Cuarto.Descripcion</th>
                                <td>
                                    <a asp-action="Modificar" asp-route-Id="@cuarto.IdCuarto" class="btn btn-sm btn-outline-secondary">
                                        Modificar <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
